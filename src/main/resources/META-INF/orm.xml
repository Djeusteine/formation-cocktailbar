<?xml version="1.0"?>
<entity-mappings
	xmlns="http://www.eclipse.org/eclipselink/xsds/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.eclipse.org/eclipselink/xsds/persistence/orm
	http://www.eclipse.org/eclipselink/xsds/eclipselink_orm_2_1.xsd"
	version="2.1">
	
	<entity class="fr.formation.entity.Ingredient">
		<table name="ingredient" />
		<attributes>
			<id name="id">
				<column name="id" />
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="etat">
				<column name="state" />
			</basic>
			<basic name="name">
				<column name="name" />
			</basic>
		</attributes>
	</entity>
	
	<entity class="fr.formation.entity.Cocktail">
		<table name="cocktail" />
		<attributes>
			<id name="id">
				<column name="id" />
				<generated-value strategy="IDENTITY" />
			</id>
			<basic name="name">
				<column name="name" />
			</basic>
			<basic name="price">
				<column name="price" />
			</basic>
		</attributes>
	</entity>
	
	<entity class="fr.formation.entity.CocktailPart">
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY"/>
			</id>
			<basic name="quantity" />
			<one-to-one name="cocktail">
				<join-column name="id_cocktail" />
			</one-to-one>
			<one-to-one name="ingredient">
				<join-column name="id_ingredient" />
			</one-to-one>
		</attributes>
	</entity>
</entity-mappings>